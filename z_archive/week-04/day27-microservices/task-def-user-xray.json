{
  "family": "day32-user-service-xray",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::294659522793:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::294659522793:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "user-service",
      "image": "294659522793.dkr.ecr.ap-northeast-1.amazonaws.com/user-service:xray",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8082,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {"name": "SERVER_PORT", "value": "8082"},
        {"name": "AWS_REGION", "value": "ap-northeast-1"},
        {"name": "DYNAMODB_TABLE_NAME", "value": "day27-users"},
        {"name": "SPRING_DATA_REDIS_HOST", "value": "day31-session-redis.zoi31i.0001.apne1.cache.amazonaws.com"},
        {"name": "SPRING_DATA_REDIS_PORT", "value": "6379"},
        {"name": "AWS_XRAY_DAEMON_ADDRESS", "value": "localhost:2000"}
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/day32-xray",
          "awslogs-region": "ap-northeast-1",
          "awslogs-stream-prefix": "user-service"
        }
      }
    },
    {
      "name": "xray-daemon",
      "image": "amazon/aws-xray-daemon:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 2000,
          "protocol": "udp"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/day32-xray",
          "awslogs-region": "ap-northeast-1",
          "awslogs-stream-prefix": "xray-daemon"
        }
      }
    }
  ]
}